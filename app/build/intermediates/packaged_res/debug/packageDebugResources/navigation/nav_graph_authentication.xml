<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_authentication"
    app:startDestination="@id/loginFragment">

    <include app:graph="@navigation/nav_graph_main" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.irentmovie.ui.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainActivity"
            app:destination="@id/nav_graph_main"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph_authentication"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.irentmovie.ui.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_mainActivity"
            app:destination="@id/nav_graph_main"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph_authentication"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>
