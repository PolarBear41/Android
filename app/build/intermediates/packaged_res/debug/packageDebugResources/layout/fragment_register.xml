<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    
                 
                            
                                                                          
                                           
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@drawable/background_gradient"
        tools:context=".ui.register.RegisterActivity" android:tag="layout/fragment_register_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <!-- Form Data Section -->
        <LinearLayout
            android:id="@+id/ly_form_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_gradient"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toTopOf="@id/btn_register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5">

            <TextView
                style="@style/FormSectionTitleTextView.AuthUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_gradient"
                android:hint="Username"
                android:inputType="textPersonName"
                android:padding="16dp"
                android:tag="binding_1"               />

            <TextView
                style="@style/FormInputErrorTitleTextView.AuthUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Invalid Username"
                android:tag="binding_2"                                                     
                tools:visibility="visible" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/default_padding" />

            <TextView
                style="@style/FormSectionTitleTextView.AuthPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_gradient"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="16dp"
                android:tag="binding_3"               />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/default_padding" />

        </LinearLayout>

        <TextView
            android:id="@+id/btn_register"
            style="@style/ActionButton.AuthRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_gradient"
            android:clickable="true"
            android:focusable="true"
            android:tag="binding_4"                        
            android:padding="12dp"
            android:text="Register"
            android:minHeight="48dp"
            android:minWidth="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ly_form_data"
            android:layout_marginTop="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
         