<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                        
    
                 
                            
                                                                              
                                           
           
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@drawable/background_gradient"
        tools:context=".ui.createPost.CreatePostFragment" android:tag="layout/fragment_create_post_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

        <EditText
            android:id="@+id/et_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Descriere"
            android:background="@drawable/button_gradient"
            android:padding="16dp"
            android:tag="binding_1"                 
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Price -->
        <EditText
            android:id="@+id/et_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Preț"
            android:background="@drawable/button_gradient"
            android:padding="16dp"
            android:inputType="numberDecimal"
            android:tag="binding_2"           
            app:layout_constraintTop_toBottomOf="@id/et_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Period -->
        <EditText
            android:id="@+id/et_period"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Perioadă"
            android:background="@drawable/button_gradient"
            android:padding="16dp"
            android:tag="binding_3"            
            app:layout_constraintTop_toBottomOf="@id/et_price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/et_movie_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Tip film"
            android:background="@drawable/button_gradient"
            android:padding="16dp"
            android:tag="binding_4"          
            app:layout_constraintTop_toBottomOf="@id/et_period"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Post Ad Button -->
        <Button
            android:id="@+id/btn_post_ad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Postează Anunț"
            android:background="@drawable/drawable_selector"
            android:textColor="@color/color_selector"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/et_movie_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:tag="binding_5"                       />

    </androidx.constraintlayout.widget.ConstraintLayout>
         